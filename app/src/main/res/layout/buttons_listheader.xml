<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!-- layout for a stop in a listview -->
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75" />
    <ImageButton android:id="@+id/exp_favorite"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_star_dark"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:onClick="setList"/>
    <View
        android:layout_width="8dp"
        android:layout_height="match_parent" />
    <ImageButton android:id="@+id/exp_bus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/btn_bus"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:onClick="setList"/>
    <View
        android:layout_width="8dp"
        android:layout_height="match_parent" />
    <ImageButton android:id="@+id/exp_lines"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/btn_train"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:onClick="setList"/>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75" />
</LinearLayout>